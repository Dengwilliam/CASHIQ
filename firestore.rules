rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admin collection: Allow public read for filtering purposes.
    // Writes must be done via the Firebase Console.
    match /admins/{userId} {
      allow read: if true;
      allow write: if false;
    }

    match /users/{userId} {
      // Admins can get any user doc. A user can get their own doc.
      allow get: if request.auth.uid == userId || exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      
      // Admins can list users.
      allow list: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      
      // Admins can write to any user doc. A non-suspended user can write to their own.
      allow write: if request.auth != null && (
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) ||
        (request.auth.uid == userId && resource.data.isSuspended != true)
      );

        // Payment Transactions subcollection
        match /payment-transactions/{transactionId} {
            // A user can create their own payment record
            allow create: if request.auth.uid == userId;
            // Admins can list and update transactions, users can read their own.
            allow list, read: if request.auth.uid == userId || exists(/databases/$(database)/documents/admins/$(request.auth.uid));
            allow update: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        }
    }

    match /scores/{scoreId} {
      allow read;
      // Block suspended users from creating scores
      allow create: if request.auth != null 
                     && request.auth.uid == request.resource.data.userId
                     && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuspended != true;
      allow update, delete: if false;
    }

    match /prizePools/{weekId} {
        allow get: if true;
        allow list: if true; // list is needed for some queries, though we only use get.
        allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
