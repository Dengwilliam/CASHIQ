rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admin collection: Manually managed in Firebase Console.
    match /admins/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
      allow list, write: if false;
    }

    match /users/{userId} {
      // Admins can get any user doc. A non-suspended user can get their own.
      allow get: if request.auth != null && (
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) ||
        (request.auth.uid == userId && get(/databases/$(database)/documents/users/$(userId)).data.isSuspended != true)
      );
      
      // Admins can list users.
      allow list: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      
      // Admins can write to any user doc. A non-suspended user can write to their own.
      allow write: if request.auth != null && (
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) ||
        (request.auth.uid == userId && resource.data.isSuspended != true)
      );

      match /payment-transactions/{transactionId} {
        // A user can get their own transaction if not suspended, or an admin can get any transaction.
        allow get: if (request.auth.uid == userId && get(/databases/$(database)/documents/users/$(userId)).data.isSuspended != true) 
                      || exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        
        // A user can list their own transactions if not suspended.
        allow list: if request.auth.uid == userId && get(/databases/$(database)/documents/users/$(userId)).data.isSuspended != true;

        // A user can create a transaction for themselves if not suspended.
        allow create: if request.auth.uid == userId 
                       && request.resource.data.userId == userId
                       && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuspended != true;
        
        // Only an admin can update a transaction.
        allow update: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
        
        allow delete: if false;
      }
    }
    
    // Rule to allow admins to perform a collection group query on 'payment-transactions'.
    // This is required for the admin dashboard.
    match /{path=**}/payment-transactions/{transactionId} {
      allow list: if exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /scores/{scoreId} {
      allow read;
      // Block suspended users from creating scores
      allow create: if request.auth != null 
                     && request.auth.uid == request.resource.data.userId
                     && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuspended != true;
      allow update, delete: if false;
    }

    match /prizePools/{weekId} {
        allow get: if true;
        allow list: if true; // list is needed for some queries, though we only use get.
        allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
