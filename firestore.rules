rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admin collection: Manually managed in Firebase Console.
    // Client-side can only read to check for admin status. No writes allowed from client.
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    match /users/{userId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /scores/{scoreId} {
      allow read;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if false;
    }

    match /payment-transactions/{transactionId} {
      // Admins can read all transactions, users can only read their own.
      allow get: if request.auth != null && (resource.data.userId == request.auth.uid || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      // Admins can list all transactions.
      allow list: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      // Users can create their own transactions.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Only admins can update (approve/reject) transactions.
      allow update: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      allow delete: if false;
    }
  }
}
