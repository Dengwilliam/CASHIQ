{
  "entities": {
    "score": {
      "title": "Score",
      "description": "Represents a score entry for the quiz.",
      "type": "object",
      "properties": {
        "playerName": {
          "type": "string",
          "description": "The name of the player."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who achieved the score."
        },
        "score": {
          "type": "number",
          "description": "The score achieved by the player."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the score was submitted."
        }
      },
      "required": ["playerName", "score", "createdAt", "userId"]
    },
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "badges": {
          "type": "array",
          "description": "An array of badges earned by the user.",
          "items": {
            "type": "string"
          }
        },
        "momoNumber": {
          "type": "string",
          "description": "The user's MTN MoMo number for receiving payments."
        }
      },
      "required": ["displayName", "email"]
    },
    "paymentTransaction": {
      "title": "Payment Transaction",
      "description": "Represents a manual payment transaction submitted by a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who made the payment."
        },
        "momoTransactionId": {
          "type": "string",
          "description": "The MTN MoMo transaction ID provided by the user."
        },
        "amount": {
          "type": "number",
          "description": "The amount paid."
        },
        "status": {
          "type": "string",
          "description": "The status of the payment.",
          "enum": ["pending", "approved", "rejected"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the payment proof was submitted."
        }
      },
      "required": ["userId", "momoTransactionId", "amount", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["Email/Password"]
  },
  "firestore": {
    "/scores/{scoreId}": {
      "schema": {
        "$ref": "#/backend/entities/score"
      },
      "description": "Stores quiz scores for the leaderboard."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/userProfile"
      },
      "description": "Stores user profile information."
    },
    "/payment-transactions/{transactionId}": {
      "schema": {
        "$ref": "#/backend/entities/paymentTransaction"
      },
      "description": "Stores user-submitted payment transactions."
    }
  }
}
